{
  "name": "eufy-geo-platform",
  "version": "1.0.0",
  "description": "Eufy GEO Platform - AI-powered content marketing platform",
  "main": "src/api/server.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/api/server.js",
    "start:prod": "NODE_ENV=production node dist/api/server.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:playwright": "playwright test",
    "test:firecrawl": "playwright test tests/firecrawl/",
    "test:geo": "playwright test tests/geo-visibility/",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "analyze:geo": "ts-node tests/geo-visibility/run-geo-analysis.ts",
    "report": "playwright show-report",
    "sync": "./scripts/auto-sync.sh",
    "workflow": "./scripts/dev-workflow.sh",
    "ci": "npm run lint && npm run typecheck && npm test",
    "docker:build": "docker build -t eufygeo2:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env eufygeo2:latest"
  },
  "keywords": ["seo", "geo", "ai", "marketing", "eufy"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^20.10.5",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "socket.io": "^4.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "exec": "ts-node src/api/server.ts",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
